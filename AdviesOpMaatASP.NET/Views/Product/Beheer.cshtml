
@{
    ViewData["Title"] = "Beheer";
}


<main style="min-height=100vh;">
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <a href="#tabProduct" class="nav-tabs-dropdown btn btn-block btn-primary" data-toggle="tab">Producten</a>
                <ul id="nav-tabs-wrapper" class="nav nav-tabs nav-pills nav-stacked well">
                    <li class="active"><a href="#tabProduct" data-toggle="tab">Producten</a></li>
                    <li><a href="#tabCategorie" data-toggle="tab">Categorieën</a></li>
                    <li><a href="#tabVraag" data-toggle="tab">Vragen</a></li>
                    <li><a href="#tabGebruiker" data-toggle="tab">Gebruikers</a></li>
                </ul>
            </div>
            <div class="col-sm-9">
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active" id="tabProduct">
                        <h3>Productbeheer</h3>
                        @Html.Partial("Beheer/_BeheerProducten")
                    </div>
                    <div role="tabpanel" class="tab-pane fade" id="tabCategorie">
                        <h3>Categoriebeheer</h3>
                        @Html.Partial("Beheer/_BeheerCategorieen")
                    </div>
                    <div role="tabpanel" class="tab-pane fade" id="tabVraag">
                        <h3>Categoriebeheer</h3>
                        @Html.Partial("Beheer/_BeheerVragen")
                    </div>
                    <div role="tabpanel" class="tab-pane fade" id="tabGebruiker">
                        <h3>Categoriebeheer</h3>
                        @Html.Partial("Beheer/_BeheerGebruikers")
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
